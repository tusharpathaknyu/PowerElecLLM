        "duty_cycle": 0.5,
        "inductance_uH": 30,
        "capacitance_uF": 12.5,
        "formula_duty_cycle": "D = Vout/Vin = 12/24 = 0.5",
        "formula_inductance": "L = (Vin - Vout) * D / (delta_IL * f) = (24-12)*0.5 / (0.6*100000) = 100uH for 30% ripple",
