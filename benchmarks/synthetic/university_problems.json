  "problems": [
    {
      "id": "uni_buck_001",
      "source": "Adapted from MIT OCW 6.334 style",
      "topology": "buck",
      "problem_statement": "A buck converter operates from a 28V aircraft power bus to produce 5V for avionics at 3A. Switching frequency is 250kHz. Design for 20% inductor current ripple and 1% output voltage ripple.",
      "specs": {
        "vin": 28,
        "vout": 5,
        "iout": 3,
        "frequency": 250000
      },
      "ground_truth": {
        "duty_cycle": 0.179,
        "formula": "D = Vout/Vin = 5/28 = 0.179",
        "inductance_uH": 16.4,
        "inductance_formula": "L = (Vin-Vout)*D/(\u0394IL*f) = (28-5)*0.179/(0.6*250000) = 27.5\u03bcH",
        "capacitance_uF": 30,
        "capacitance_formula": "C = \u0394IL/(8*f*\u0394Vout) = 0.6/(8*250000*0.05) = 6\u03bcF"
      }
    },
    {
      "id": "uni_buck_002",
      "source": "Adapted from NPTEL style",
      "topology": "buck",
      "problem_statement": "Design a synchronous buck converter for laptop power: Vin=19V, Vout=1.8V (CPU core), Iout=20A, fsw=500kHz. Calculate duty cycle, minimum inductance for CCM, and output capacitance for 2% ripple.",
      "specs": {
        "vin": 19,
        "vout": 1.8,
        "iout": 20,
        "frequency": 500000
      },
      "ground_truth": {
        "duty_cycle": 0.095,
        "formula": "D = Vout/Vin = 1.8/19 = 0.095",
        "inductance_uH": 0.82,
        "inductance_formula": "L = (Vin-Vout)*D/(\u0394IL*f) = (19-1.8)*0.095/(4*500000) = 0.82\u03bcH",
        "capacitance_uF": 55.6,
        "capacitance_formula": "C = \u0394IL/(8*f*\u0394Vout) = 4/(8*500000*0.036) = 27.8\u03bcF"
      }
    },
    {
      "id": "uni_boost_001",
      "source": "Adapted from MIT OCW style",
      "topology": "boost",
      "problem_statement": "A photovoltaic panel provides 17V at maximum power point. Design a boost converter to charge a 24V battery bank at 5A. Switching frequency is 100kHz. Determine duty cycle and minimum inductance for 30% ripple.",
      "specs": {
        "vin": 17,
        "vout": 24,
        "iout": 5,
        "frequency": 100000
      },
      "ground_truth": {
        "duty_cycle": 0.292,
        "formula": "D = 1 - Vin/Vout = 1 - 17/24 = 0.292",
        "input_current": 7.06,
        "input_current_formula": "Iin = Iout/(1-D) = 5/0.708 = 7.06A",
        "inductance_uH": 23.5,
        "inductance_formula": "L = Vin*D/(\u0394IL*f) = 17*0.292/(2.12*100000) = 23.5\u03bcH"
      }
    },
    {
      "id": "uni_boost_002",
      "source": "Physics derivation",
      "topology": "boost",
      "problem_statement": "A fuel cell outputs 22V and must supply a 48V DC bus for telecom equipment at 10A. Design a boost converter operating at 75kHz with 25% inductor ripple.",
      "specs": {
        "vin": 22,
        "vout": 48,
        "iout": 10,
        "frequency": 75000
      },
      "ground_truth": {
        "duty_cycle": 0.542,
        "formula": "D = 1 - Vin/Vout = 1 - 22/48 = 0.542",
        "input_current": 21.8,
        "input_current_formula": "Iin = Iout/(1-D) = 10/0.458 = 21.8A",
        "inductance_uH": 21.8,
        "inductance_formula": "L = Vin*D/(\u0394IL*f) = 22*0.542/(5.45*75000) = 29.2\u03bcH"
      }
    },
    {
      "id": "uni_buckboost_001",
      "source": "Adapted from NPTEL style",
      "topology": "buck_boost",
      "problem_statement": "A battery-powered device has input range 9-15V but requires -12V output at 1A. Design a buck-boost converter at 150kHz. Calculate duty cycle at nominal 12V input.",
      "specs": {
        "vin_min": 9,
        "vin_nom": 12,
        "vin_max": 15,
        "vout": -12,
        "iout": 1,
        "frequency": 150000
      },
      "ground_truth": {
        "duty_cycle_nom": 0.5,
        "formula": "D = |Vout|/(Vin+|Vout|) = 12/(12+12) = 0.5",
        "duty_cycle_min": 0.571,
        "duty_cycle_max": 0.444,
        "inductance_uH": 40,
        "inductance_formula": "L = Vin*D/(\u0394IL*f) at worst case"
      }
    },
    {
      "id": "uni_flyback_001",
      "source": "Adapted from MIT OCW style",
      "topology": "flyback",
      "problem_statement": "Design an isolated flyback converter for a USB-C charger: Vin=150V (rectified AC), Vout=20V, Pout=65W, fsw=100kHz. Assume turns ratio 5:1.",
      "specs": {
        "vin": 150,
        "vout": 20,
        "pout": 65,
        "iout": 3.25,
        "frequency": 100000,
        "turns_ratio": 5
      },
      "ground_truth": {
        "duty_cycle": 0.4,
        "formula": "D = n*Vout/(Vin + n*Vout) = 5*20/(150 + 100) = 0.4",
        "primary_inductance_uH": 346,
        "inductance_formula": "Lp = (Vin*D)^2/(2*Pout*f) = (150*0.4)^2/(2*65*100000) = 276.9\u03bcH"
      }
    },
    {
