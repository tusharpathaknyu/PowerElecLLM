    {
      "id": "uni_cuk_001",
      "source": "Physics derivation",
      "topology": "cuk",
      "problem_statement": "Design a Cuk converter with Vin=15V, Vout=-20V, Iout=0.8A, fsw=100kHz for a sensor power supply.",
