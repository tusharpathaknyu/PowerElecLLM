    {
      "id": "uni_halfbridge_001",
      "source": "Adapted from MIT OCW style",
      "topology": "half_bridge",
      "problem_statement": "Design a half-bridge DC-DC converter: Vin=400V, Vout=24V, Pout=300W, fsw=100kHz. Use transformer ratio 8:1.",
      "specs": {
        "vin": 400,
        "vout": 24,
        "pout": 300,
        "iout": 12.5,
        "frequency": 100000,
        "turns_ratio": 8
      },
      "ground_truth": {
        "duty_cycle": 0.48,
        "formula": "Vout = D*Vin/(2*n), so D = 2*n*Vout/Vin = 2*8*24/400 = 0.96 (max 0.5 effective)",
        "output_inductance_uH": 10,
        "output_capacitance_uF": 130
      }
    },
